{% extends "base.html.twig" %}

{% block body %}
   <div class="card">
        <div class="card-body">
            <div class="card-title">
                <a href="{{ url("auction_details", {"id": auction.id}) }}">{{ auction.title }}</a>
            </div>
            <div class="card-text">
                <p>{{ auction.description }}</p>
            </div>

            <ul class="list-group list-group-flus">
                <li class="list-group-item">Cena: {{ auction.price }} zł</li>
                <li class="list-group-item">Cena wywoławcza: {{ auction.startingPrice }} zł</li>
                <li class="list-group-item">Aukcja kończy się: {{ auction.expiresAt | date("Y-m-d H:i:s") }}</li>
            </ul>
        </div>
    </div>

    <a class="btn btn-default" href="{{ url('auction_index')}}">Powrót</a>
    <a class="btn btn-warning" href="{{ url('auction_delete', {"id": auction.id } )}}">Usuń</a>
{% endblock %}